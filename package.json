{
  "name": "mi-aguila",
  "version": "1.0.0",
  "description": "API Rest mi aguila",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "start": "NODE_ENV=production node ./dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only ./api/server.ts",
    "tslint": "tslint --project tsconfig.json",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"./api/**/*.{ts}\"",
    "prettier:write": "npm run prettier:base -- --write \"./api/**/*.ts\"",
    "test": "cross-env NODE_ENV=test jest --coverage --testTimeout=50000",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/linuxcarl/mi-.aguila.git"
  },
  "author": "Carlos Enrique Ramirez Flores",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/linuxcarl/mi-.aguila/issues"
  },
  "homepage": "https://github.com/linuxcarl/mi-.aguila#readme",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/joi": "^17.1.1",
    "@types/boom": "^7.3.0",
    "@types/joi": "^14.3.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "joi-objectid": "^3.0.1",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.12",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-node-dev": "^1.0.0-pre.61",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:write"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
}
